<% include ../partials/header %>

<div class="container">
    <div class="row">
        <div class="col-md-3">
            <p class="lead">YelpCamp</p>
            <div class="list-group">
                <li class="list-group-item active">Info 1</li>
                <li class="list-group-item">Info 2</li>
                <li class="list-group-item">Info 3</li>
            </div>
        </div>
        <div class="col-md-9">
            <div class="thumbnail">
                <img class="img-responsive" src="<%= campground.img %>">
                <div class="caption">
                    <h4 class="pull-right">$9.00/night</h4>
                    <h4><a href="#"><%= campground.name %></a></h4>
                    <p><%= campground.description %></p>
                    <p>
                        <em>Submitted by <strong><%= campground.author.username %></strong></em>
                    </p>
                    <% if(user && (campground.author.id.equals(user._id) || user.admin)) { %>
                    <a class="btn btn-warning" href="/campgrounds/<%= campground._id %>/edit">Edit campground: <%= campground.name %></a>
                    <form class="delete-form" action="/campgrounds/<%= campground._id %>?_method=DELETE" method="post">
                        <button class="btn btn-danger">Delete campground: <%= campground.name %></button>
                    </form>
                    <% } %>
                </div>
            </div>
            <div class="well">
                <div class="text-center">
                    <a class="btn btn-success" href="/campgrounds/<%= campground._id %>/comments/new">Leave a Review!</a>
                </div>
                <hr>
                <% campground.comments.forEach(function(comment){ %>
                    <div class="row">
                        <div class="col-md-12">
                            <strong><%= comment.author.username %></strong>
                            <span class="pull-right">10 Days ago</span>
                            <p>
                                 <%= comment.text %>
                            </p>
                            <% if(user && (user.admin || comment.author.id.equals(user._id))) { %>
                            <a class="btn btn-xs btn-warning"
                                href="/campgrounds/<%= campground._id %>/comments/<%= comment._id %>/edit">Edit</a>
                            <form class="delete-form"
                                action="/campgrounds/<%= campground._id %>/comments/<%= comment._id %>?_method=DELETE"
                                method="POST">
                                <button class="btn btn-xs btn-danger">Delete</button>
                            </form>
                            <% } %>
                        </div>
                    </div>
                <% }); %>

            </div>
        </div>
    </div>
</div>

<% include ../partials/footer %>
