<% include ../partials/header %>

<div class="container">

	<div class="row text-center">

		<h1>
			Edit <%= campground.name %>
		</h1>
		<div style="width: 30%; margin: 0 auto;">
			<form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST">
				<div class="form-group">
					<input class="form-control" type="text" name="campground[name]" placeholder="Campground Name" value="<%= campground.name %>"/>

				</div>
				<div class="form-group">
					<input class="form-control" type="text" name="campground[img]" placeholder="Image URL Address" value="<%= campground.img %>"/>
				</div>
				<div class="form-group">
					<input class="form-control" type="text" name="campground[description]" placeholder="Description" value="<%= campground.description %>"/>
				</div>
				<div class="form-group">
					<button class="btn btn-lg btn-primary btn-block" type="submit">Edit Campground</button>
				</div>
			</form>
			<a href="/campgrounds">Cancel</a>
		</div>


	</div>

</div>

<% include ../partials/footer %>
