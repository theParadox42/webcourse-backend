<% include ../partials/header %>

<div class="container">

	<div class="row text-center">
		<h1>
			Add a comment to <%= campground.name %>
		</h1>
		<div style="width: 30%; margin: 0 auto;">
			<form action="/campgrounds/<%= campground._id %>/comments/new" method="POST">
				<div class="form-group">
					<input class="form-control" type="text" name="comment[text]" placeholder="Comment"/>
				</div>
				<div class="form-group">
					<input class="form-control" type="text" name="comment[author]" placeholder="Author"/>
				</div>
				<div class="form-group">
					<button class="btn btn-lg btn-primary btn-block" type="submit">Write Comment</button>
				</div>
			</form>
			<a href="/campgrounds">Cancel</a>
		</div>


	</div>

</div>

<% include ../partials/footer %>
